{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "noErrorTruncation": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/tests",
    "dist",
    "**/*spec.ts"
  ]
}